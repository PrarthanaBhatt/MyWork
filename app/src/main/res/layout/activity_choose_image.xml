<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".components.contentprovider_one.ChooseImageActivity">

<Button
    android:id="@+id/call"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="85dp"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:text="@string/call"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.18" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:defaultFocusHighlightEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_on_primary"
            android:enabled="false"
            android:hint="@string/select_image"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/imageView"
        android:background="@drawable/ic_baseline_image_24"

        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        app:backgroundTint="@null"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="98dp"
        android:layout_marginRight="3dp"
        />


    <Button
        android:id="@+id/uploadBtnLand"
        android:background="@drawable/ic_baseline_cloud_upload_24"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        app:backgroundTint="@null"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="108dp"
        android:layout_marginRight="30dp" />
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>